<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

    android:background="@color/colorOrange">

    <include
        layout="@layout/a_image_background2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        />

    <FrameLayout
        android:id="@+id/prog_bar_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        >

        <ProgressBar
            android:id="@+id/prog_bar_find_pair"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="50%"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_progress_value"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:id="@+id/lin_layout_find_pair"
        android:layout_below="@id/prog_bar_frame"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/btn_layout_left">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/eng_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/eng_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/eng_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/eng_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:padding="2dp"
                android:textColor="@color/eng_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/btn_layout_right">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/trans_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/trans_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/trans_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@color/trans_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="2dp"
                android:textColor="@color/trans_text_color"
                android:textStyle="bold"
                style="@style/Base.Widget.AppCompat.ButtonBar"
                android:textSize="18sp"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-167dp">

        <include
            layout="@layout/t_top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
