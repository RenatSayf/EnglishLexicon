<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_view_error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/text_view_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text="API ключ:"
        />

    <EditText
        android:id="@+id/edit_text_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:inputType="textMultiLine"
        android:text="ssd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сохранить"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/text_btn_for_test_green"
            style="@style/Base.Widget.AppCompat.ButtonBar"/>

        <Button
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Получить"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/btn_back_yellow"
            style="@style/Base.Widget.AppCompat.ButtonBar"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Отмена"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/text_btn_for_test_red"
            style="@style/Base.Widget.AppCompat.ButtonBar"/>
    </LinearLayout>


</LinearLayout>
