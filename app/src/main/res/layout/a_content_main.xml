<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.MainActivity"
    tools:showIn="@layout/a_layout_main">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/a_image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_gravity="top">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewDict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_gravity="start"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textAlignment="center"
                        android:background="@drawable/text_background"
                        />

                    <Switch
                        android:id="@+id/switch_ru_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:checked="false"
                        android:showText="false"
                        android:textOff="@string/text_ru_off"
                        android:textOn="@string/text_ru_on"
                        android:typeface="sans"
                        />

                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="0"
                android:background="@drawable/text_background"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#132ef7"
                    android:textSize="40sp"
                    android:textStyle="normal|bold"/>

                <Button
                    android:id="@+id/btn_play"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/btn_play2"
                    android:onClick="btnPlayClick"
                    />

                <TextView
                    android:id="@+id/ruTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:phoneNumber="false"
                    android:textAlignment="center"
                    android:textColor="#0b9404"
                    android:textSize="40sp"
                    android:textStyle="normal|bold"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottomPanel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_previous"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/btn_previous"
                    android:onClick="btnNextBackClick"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    />

                <Button
                    android:id="@+id/btn_pause"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/btn_pause"
                    android:onClick="btnPauseClick"
                    android:visibility="visible"
                    >

                </Button>

                <Button
                    android:id="@+id/btn_stop"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/btn_stop"
                    android:onClick="btnStopClick"
                    android:visibility="visible"
                    />

                <Button
                    android:id="@+id/btn_next"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/btn_next"
                    android:onClick="btnNextBackClick"
                    android:visibility="visible"
                    />

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>


</RelativeLayout>
