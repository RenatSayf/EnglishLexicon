<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rel_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pape_background_blue"
                android:orientation="vertical"
                tools:context="com.myapp.lexicon.t_ListenEndClickFragment"
    >


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_view_listen_layout"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/prog_bar_listen"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:minHeight="0dp"
                android:text="text"
                android:textSize="@dimen/buttons_text_size_land_small_"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/btn0"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:minHeight="0dp"
                android:text="text"
                android:textSize="@dimen/buttons_text_size_land_small_"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/btn1"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:minHeight="0dp"
                android:text="text"
                android:textSize="@dimen/buttons_text_size_land_small_"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/btn2"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:minHeight="0dp"
                android:text="text"
                android:textSize="@dimen/buttons_text_size_land_small_"
                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/btn3"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_button_for_test"
                android:minHeight="0dp"
                android:text="text"
                android:textSize="@dimen/buttons_text_size_land_small_"
                />

        </RelativeLayout>

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/sound_btn_foreground"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:contentDescription="sound_button"
            android:id="@+id/btn_speech"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-158dp">

        <include
            layout="@layout/t_top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>


