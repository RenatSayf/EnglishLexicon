<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>

            <solid android:color="@color/colorGreen"/>
            <stroke
                android:width="4dp"
                android:color="#4aa5d4" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>

    </item>

    <item >
        <shape>

            <solid android:color="@color/colorWhiteOpacity"/>
            <stroke
                android:width="4dp"
                android:color="#4aa5d4" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />

        </shape>
        <color android:color="@color/trans_text_color"/>

    </item>

</selector>